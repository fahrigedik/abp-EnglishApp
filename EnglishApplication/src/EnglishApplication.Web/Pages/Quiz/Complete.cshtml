@page
@using EnglishApplication.Localization
@using Microsoft.Extensions.Localization
@model EnglishApplication.Web.Pages.Quiz.CompleteModel
@inject IStringLocalizer<EnglishApplicationResource> L

@{
    ViewData["Title"] = L["QuizCompleted"];
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg rounded-lg quiz-complete-card">
                <div class="card-header bg-success text-white text-center py-4">
                    <h1 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i> @L["QuizCompleted"]
                    </h1>
                </div>
                <div class="card-body text-center p-5">
                    <div class="complete-icon mb-4">
                        <i class="fas fa-trophy"></i>
                    </div>

                    <h2 class="mb-4">@L["Congratulations"]!</h2>

                    <p class="lead mb-4">
                        @L["YouHaveCompletedAllQuestions"]
                    </p>

                    <div class="message-box mb-4">
                        <p>
                            @L["ContinueLearningMessage"]
                        </p>
                    </div>

                    <div class="actions mt-5">
                        <a asp-page="/Words/Index" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-book me-2"></i> @L["MyWords"]
                        </a>

                        <a asp-page="/Index" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-home me-2"></i> @L["Home"]
                        </a>
                    </div>
                </div>
                <div class="card-footer py-3 bg-light text-center">
                    <p class="mb-0">
                        <a asp-page="/Quiz/Index" class="text-primary">
                            <i class="fas fa-redo me-1"></i> @L["StartNewQuiz"]
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .quiz-complete-card {
        border: none;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
    }

    .complete-icon {
        font-size: 5rem;
        color: #28a745;
        animation: pulse 2s infinite;
    }

    .message-box {
        background-color: rgba(40, 167, 69, 0.1);
        border: 2px solid #28a745;
        border-radius: 10px;
        padding: 20px;
    }

    .actions .btn {
        transition: all 0.3s ease;
        border-radius: 8px;
        font-weight: 500;
        padding: 12px 24px;
    }

        .actions .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

    .card-footer a {
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s;
    }

        .card-footer a:hover {
            text-decoration: underline;
        }

    @keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        transform: scale(1);
    }

    }
</style>
