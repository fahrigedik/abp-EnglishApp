@page
@model EnglishApplication.Web.Pages.IndexModel
@using EnglishApplication.Web.Menus
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Microsoft.AspNetCore.Mvc.Localization
@using EnglishApplication.Localization
@using Volo.Abp.Users
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<EnglishApplicationResource> L
@inject ICurrentUser CurrentUser
@{
    ViewBag.PageTitle = L["Home"];
    PageLayout.Content.MenuItemName = EnglishApplicationMenus.Home;
}

@section styles {
    <abp-style src="/Pages/Index.css" />
}

<div class="row mb-3">
    <div class="col-xl-6 col-12 d-flex">
        <div class="card h-lg-100 w-100 overflow-hidden">
            <div class="card-body">
                <div class="starting-content pe-5">
                    @if (!CurrentUser.IsAuthenticated)
                    {
                        <h3>@L["Welcome"]</h3>
                        <p class="lead text-muted mb-2">@L["LongWelcomeMessage"]</p>
                        <a href="/Account/Login" class="btn btn-primary mb-4"><i class="fa-solid fa-right-to-bracket me-1"></i><span>@L["Login"]</span></a>
                    }
                    else
                    {
                        <h3>@L["WelcomeBack"]</h3>
                        <p class="lead text-muted mb-4">@L["WelcomeBackMessage"]</p>
                        <div class="d-flex gap-3 mb-4">
                            <a href="/Words" class="btn btn-primary"><i class="fa fa-book me-1"></i><span>@L["MyWords"]</span></a>
                            <a href="/Quiz" class="btn btn-success"><i class="fa fa-graduation-cap me-1"></i><span>@L["StartQuiz"]</span></a>
                        </div>
                    }

                    <h4>@L["HowToUseTitle"]</h4>
                    <p class="text-muted mb-3">@L["HowToUseDescription"]</p>

                    <div class="feature-list mb-4">
                        <div class="feature-item d-flex align-items-center mb-2">
                            <div class="rounded-circle me-2 flex-center bg-primary text-white" style="width: 24px; height: 24px;">1</div>
                            <div>@L["Step1_AddWords"]</div>
                        </div>
                        <div class="feature-item d-flex align-items-center mb-2">
                            <div class="rounded-circle me-2 flex-center bg-primary text-white" style="width: 24px; height: 24px;">2</div>
                            <div>@L["Step2_TakeQuiz"]</div>
                        </div>
                        <div class="feature-item d-flex align-items-center mb-2">
                            <div class="rounded-circle me-2 flex-center bg-primary text-white" style="width: 24px; height: 24px;">3</div>
                            <div>@L["Step3_SpacedRepetition"]</div>
                        </div>
                    </div>
                </div>
                <img class="card-bg-image" src="/images/getting-started/bg-01.png">
            </div>
        </div>
    </div>
    <div class="col-xl-6 col-md-12 d-flex">
        <div class="card overflow-hidden w-100">
            <div class="card-body d-flex flex-column">
                <h4>@L["SpacedRepetitionTitle"]</h4>
                <p class="text-muted mb-3">@L["SpacedRepetitionDescription"]</p>

                <div class="spaced-repetition-diagram mb-4">
                    <div class="row">
                        <div class="col-md-3 col-6 mb-3">
                            <div class="step-box text-center p-3 bg-light rounded">
                                <div class="mb-2"><i class="fa fa-calendar-day fs-2 text-primary"></i></div>
                                <span>@L["Day0"]</span>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="step-box text-center p-3 bg-light rounded">
                                <div class="mb-2"><i class="fa fa-calendar-week fs-2 text-primary"></i></div>
                                <span>@L["Day1"]</span>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="step-box text-center p-3 bg-light rounded">
                                <div class="mb-2"><i class="fa fa-calendar-week fs-2 text-primary"></i></div>
                                <span>@L["Day3"]</span>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="step-box text-center p-3 bg-light rounded">
                                <div class="mb-2"><i class="fa fa-calendar fs-2 text-primary"></i></div>
                                <span>@L["Day7"]</span>
                            </div>
                        </div>
                    </div>
                </div>

                <h4>@L["BenefitsTitle"]</h4>
                <div class="benefits-list mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <div class="me-2 text-success"><i class="fa fa-check-circle fs-5"></i></div>
                        <div>@L["Benefit1"]</div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div class="me-2 text-success"><i class="fa fa-check-circle fs-5"></i></div>
                        <div>@L["Benefit2"]</div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div class="me-2 text-success"><i class="fa fa-check-circle fs-5"></i></div>
                        <div>@L["Benefit3"]</div>
                    </div>
                </div>

                <div class="mt-auto text-center">
                    <a href="/Quiz" class="btn btn-lg btn-primary">
                        <i class="fa fa-play-circle me-2"></i>@L["StartLearningNow"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">@L["AddWordsTitle"]</h5>
            </div>
            <div class="card-body">
                <div class="card-icon mb-3 text-center">
                    <i class="fa fa-plus-circle fa-4x text-primary"></i>
                </div>
                <p>@L["AddWordsDescription"]</p>
                <div class="mt-3 text-center">
                    <a href="/Words" class="btn btn-outline-primary">@L["ManageMyWords"]</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">@L["QuizTitle"]</h5>
            </div>
            <div class="card-body">
                <div class="card-icon mb-3 text-center">
                    <i class="fa fa-question-circle fa-4x text-success"></i>
                </div>
                <p>@L["QuizDescription"]</p>
                <div class="mt-3 text-center">
                    <a href="/Quiz" class="btn btn-outline-success">@L["TakeQuiz"]</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">@L["SettingsTitle"]</h5>
            </div>
            <div class="card-body">
                <div class="card-icon mb-3 text-center">
                    <i class="fa fa-cog fa-4x text-info"></i>
                </div>
                <p>@L["SettingsDescription"]</p>
                <div class="mt-3 text-center">
                    <a href="/UserSettings" class="btn btn-outline-info">@L["MySettings"]</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .feature-list, .benefits-list {
        background-color: rgba(0,0,0,0.02);
        padding: 16px;
        border-radius: 8px;
    }

    .card-icon {
        opacity: 0.8;
    }

    .step-box {
        transition: all 0.3s ease;
    }

        .step-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
</style>
